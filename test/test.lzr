using "gforms"

wnd = Frame("Calculator")
wnd.setMinimumSize(600,300)

panel = Panel(layoutManager = borderLayout())
field = TextField("")
field.setFont("Tahoma",0,28)

panel.add(field,BorderLayout.NORTH)

b_panel = Panel(layoutManager = gridLayout(rows=4, cols=4))

cos = Button("system")
cos.setFont("Tahoma",0,18)

output = Button("output")
output.setFont("Tahoma",1,18)

test = Button("test")
test.setFont("Tahoma",0,18)

cun = Button("cun")
cun.setFont("Tahoma",0,18)

b_panel.add(cos)
b_panel.add(output)
b_panel.add(test)
b_panel.add(cun)


wnd.add(panel,BorderLayout.NORTH)
wnd.add(b_panel,BorderLayout.CENTER)
wnd.pack()
wnd.setVisible()